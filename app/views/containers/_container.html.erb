<div id="<%= dom_id container %>">
  <h2 class="text-2xl font-medium"><%= container.name.titleize %></h2>
  <p class="my-5">
    <div class="flex items-center">
      <%= button_to "Start", start_container_path(container), method: :put, class: "rounded-md py-2 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
      <%= button_to "Stop", stop_container_path(container), method: :put, class: "rounded-md py-2 ml-2 px-5 bg-red-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  </p>
  <p class="my-5">
    <% color = container.status == "running" ? "green" : "red" %>
    <strong class="font-medium">Status:</strong>
    <span class="text-<%= color %>-500"><%= container.status %></span>
  </p>
</div>